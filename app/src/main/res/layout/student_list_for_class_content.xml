<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:orientation="vertical"
    android:background="@drawable/border_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:id="@+id/label_student_list_for_class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/student_name"
            android:textSize="16sp"
            android:layout_margin="@dimen/list_item_margin"
            android:layout_weight="3"
            android:gravity="end"/>

        <TextView
            android:id="@+id/student_list_for_class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="@dimen/list_item_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:id="@+id/label_student_list_for_class_lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/student_last_name"
            android:textSize="16sp"
            android:layout_margin="@dimen/list_item_margin"
            android:layout_weight="3"
            android:gravity="end"/>

        <TextView
            android:id="@+id/student_list_for_class_lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_item_margin"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="4"/>
    </LinearLayout>
</LinearLayout>